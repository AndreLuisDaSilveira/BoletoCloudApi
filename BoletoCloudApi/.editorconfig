# .editorconfig para projeto .NET 8 C#
root = true

##################################################
# [1] Arquivos .cs - Configurações básicas
##################################################
[*.cs]

# Espaços e indentação
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Codificação de arquivos
charset = utf-8-bom

##################################################
# [2] Estilo de código C#
##################################################

# Diretivas using
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# Estilo de chaves
csharp_new_line_before_open_brace = all

# Indentação de blocos e labels
csharp_indent_case_contents = true
csharp_indent_switch_labels = true

##################################################
# [3] Convenções de nomenclatura
##################################################

# Regra: membros privados devem estar em camelCase
dotnet_naming_rule.private_members_should_be_camel_case.severity = suggestion
dotnet_naming_rule.private_members_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_members_should_be_camel_case.style = camel_case_style

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.required_modifiers =

dotnet_naming_style.camel_case_style.capitalization = camel_case

##################################################
# [4] Regras de analisadores .NET
##################################################

# Torna métodos que não usam instância em static (boas práticas de performance)
dotnet_diagnostic.CA1822.severity = warning

# Desativa aviso sobre literais que deveriam ser localizáveis
dotnet_diagnostic.CA1303.severity = none

# Desativa regras StyleCop específicas (comentários e padrões de nomes)
dotnet_diagnostic.SA1633.severity = none      # Cabeçalho do arquivo
dotnet_diagnostic.SA1101.severity = none      # Uso obrigatório de "this"
dotnet_diagnostic.SA1403.severity = none      # Classes parciais devem estar em arquivos separados
dotnet_diagnostic.SA1623.severity = none      # Comentário de retorno padrão
dotnet_diagnostic.CS8618.severity = none      # Campo não inicializado (nullable)

# Comentário de parâmetro obrigatório
dotnet_diagnostic.SA1611.severity = error      

##################################################
# [5] Limpeza de código (Roslyn/.NET Analyzers)
##################################################

# Using não utilizados
dotnet_diagnostic.RemoveUnnecessaryImports.severity = error

# Variáveis declaradas mas não utilizadas
dotnet_diagnostic.CS0168.severity = error

# Variáveis atribuídas mas nunca usadas
dotnet_diagnostic.CS0219.severity = error

##################################################
# [6] Regras StyleCop específicas
##################################################

# Comentários XML obrigatórios em membros públicos
dotnet_diagnostic.SA1600.severity = error

# Permitir underline em campos privados (_campo)
dotnet_diagnostic.SA1309.severity = none

# Ignora erros em comentários XML padrão (como <summary>)
dotnet_diagnostic.SA1629.severity = none

# Comentários XML em construtores não são obrigatórios
dotnet_diagnostic.SA1642.severity = none

# Ordem dos elementos na classe (ex: campos, propriedades, métodos)
dotnet_diagnostic.SA1201.severity = error

# Ordenar por nível de acessibilidade (public, internal, protected, private)
dotnet_diagnostic.SA1202.severity = error

##################################################
# Fim do arquivo
##################################################
